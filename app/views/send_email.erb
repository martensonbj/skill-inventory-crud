  <div class="row">
    <form action="/send_email" method="post" id="send_email_form" class="general_form">
      <h2>Send a Message!</h2>
      <div class = "divider"></div>
        <label for="email_name">Your Name:</label>
        <input type='text' name='name' id="email_name"/>

        <label for="email_address">Email Address:</label>
        <input type="text" id="given_email" name="given_email"/>
      <button class="btn waves-effect waves-light btn-large" type="submit" name="action" value="submit">
        <i class="material-icons left">send</i>
        <span>SEND EMAIL</span>
      </button>
    </form>
  </div>
